@using Webapp.Vydata

@model GissaEttTalSpelVyModell

@{
    ViewData["Title"] = "Gissa ett tal";
}

<h1>Spel</h1>

<div>
    Gissa ett tal mellan 1-100
</div>

<div>
    Fram tills nu har du gissat @Model.AntalNuvarandeGissningar gånger
</div>

<form asp-controller="GissaEttTalSpel" asp-action="Spela" method="post">
    <label for="gissning">Gissa på ett tal:</label><input asp-for="Talgissning"/><br/>
    <button type="submit">Inmatning</button>
</form>
